<h1>Editando perfil de {{ nombre }}</h1>

<form action="/user/{{ id }}/editar" method="post" class="mb-2" enctype="multipart/form-data">
	<div class="form-group">
		<label>Nombre de usuario</label>
		<input class="form-control" name="nombre" value="{{ nombre }}">
	</div>
	<div class="form-group">
		<label>Apellido</label>
		<input class="form-control" name="apellido" value="{{ apellido }}">
	</div>
	<div class="form-group">
		<label>Cambiar imagen de perfil</label>
		<input class="form-control" type="file" name="newfoto">
		<div class="card-container">
			<img src="/uploads/{{ foto }}">
		</div>
	</div>
	<input class="btn btn-danger" type="submit" value="Guardar cambios">
</form>

<a class="btn btn-info" href="/user/{{ id }}">Volver al perfil</a>