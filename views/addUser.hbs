<h1>{{ title }}</h1>
<form action="/" method="post" enctype="multipart/form-data" class="form mb-2">
	<div class="form-group">
		<label>Nombre de usuario</label>
		<input name="nombre" required class="form-control">
	</div>
	<div class="form-group">
		<label>Apellido</label>
		<input name="apellido" required class="form-control">
	</div>
	<div class="form-group">
		<label>Selecciona tu foto de perfil</label>
		<input type="file" class="form-control" name="foto">
	</div>
	<input type="submit" value="Registrar usuario" class="btn btn-success">
</form>


<a class="btn btn-info" href="/">Volver a la home</a>